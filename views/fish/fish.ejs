<%- include('../partials/header.ejs' , {user:user} ) %>

<div class="searchBar">
    <h1>Welcom to the fish Index</h1>
    <form method="GET" action="/fish/search">
        <input id="search" name="fishSearch" type="text" placeholder="Search for a fish">
        <button type="submit">Search</button>
    </form>
</div>

<div class="backgrounds">

    <%for (const species of fish ) { %>
        
        <div class="tile">
            <h1><%=species.name%></h1>
            <img src="<%=species.img%>"/>
            <p><a href="<%=species.wiki%>" target="blank"><%=species.name %> Wiki</a></p>
            <p><a href="/catches/add?speciesId=<%=species.id%>">Add Catch</a></p>
        </div>
    <% } %>

</div>
    <%- include('../partials/footer.ejs') %>

