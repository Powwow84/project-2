<%- include("../partials/header.ejs", {user: user} ) %>

<div class="tileForm">
    <h2>Sign up for an account!</h2>

    <form method="POST" action="/users" class="entryForm">
        <lable for="email"></lable>
        <input type="email" name="email" id="email" placeholder="Email" required/>
        <lable for="name"></lable>
        <input type="string" name="user_name" id="user_name" placeholder="User Name" required/>
        <lable for="password"></lable>
        <input type="password" name="password" id="password" placeholder="Password" required/>
        <button type="submit" class="entryButton">Sign Up!</button>
        <a href="/users/login" class="wiki">Sign In</a>
    </form>

</div>



