<%- include("../partials/header.ejs", {user:user}) %>

<div class="searchBar">
    <h1>Here's the fish you caught</h1>
    <form method="GET" action="/fish/search">
        <input id="search" name="fishSearch" type="text" placeholder="Add a new catch by searching for a fish">
        <button type="submit">Search</button>
    </form>
</div>

<div class="backgrounds">
    <p class="noFish">You haven't logged any fish yet! Search for a fish to add a catch.</p>
    
    <%for (const post of bags ) { %>
      <% if(post.userId === user.id) { %>
        <div class="tile">
            <div class="tileHeader">
                <h3><%=post.title%></h3>
                <div class="tileInfo">
                    <p><span>Fisher:</span>  <%=post.userId%></p>
                    <p><span>Area:</span>  <%=post.location%></p>   
                    <p><span>Catch Weight:</span>  <%=post.weight%> pounds</p>
                    <p><span>Catch Length:</span>  <%=post.length%> inches</p>
                </div>
                <div class="tileImg">
                    <img src="<%=post.img%>"/>
                </div>
            </div>
            <div class="tileFooter">
                <p class="tag">Story</p>
                <p><%=post.description%></p>
                <a href="/catches/edit/<%=post.id%>" class="wiki">Edit Post</a>
                <form method="POST" action="/catches/remove/<%=post.id%>/?_method=DELETE">
                    <button type="submit" class="addButton">Delete Post</button>
                </form>
            </div>
        </div>
        <%} %>
    <% } %>

</div>

<%- include("../partials/footer.ejs") %>